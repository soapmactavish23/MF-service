<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degrade"
    android:orientation="vertical"
    tools:context=".activity.CadastrarProdutoActivity">

    <include layout="@layout/toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/galery_padrao" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/galery_padrao" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/galery_padrao" />
    </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="10dp"
                android:textColorHint="@android:color/darker_gray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="@android:color/darker_gray"
                    android:drawableLeft="@drawable/ic_title"
                    android:drawablePadding="6dp"
                    android:hint="Digite um Título"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/darker_gray" />

            </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Digite o preço de custo:"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:textSize="18sp"
        android:textColor="@android:color/white"/>
    <com.blackcat.currencyedittext.CurrencyEditText
        android:id="@+id/editPrecoCusto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTint="@android:color/darker_gray"
        android:drawableLeft="@drawable/ic_money"
        android:drawablePadding="6dp"
        android:hint="Digite o preço de custo"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Digite o preço de venda:"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:textSize="18sp"
        android:textColor="@android:color/white"/>
    <com.blackcat.currencyedittext.CurrencyEditText
        android:id="@+id/editPrecoVenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:drawableTint="@android:color/darker_gray"
        android:drawableLeft="@drawable/ic_money"
        android:drawablePadding="6dp"
        android:hint="Digite o preço de venda"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:textColorHint="@android:color/darker_gray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editDescricao"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:drawableTint="@android:color/darker_gray"
                    android:drawableLeft="@drawable/ic_description"
                    android:drawablePadding="6dp"
                    android:hint="Digite a descrição"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/darker_gray" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:background="@color/colorAccent"
                android:layout_marginTop="16dp"
                android:textColor="@android:color/white"
                android:text="Cadastrar Produto"/>

</LinearLayout>