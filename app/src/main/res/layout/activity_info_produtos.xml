<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degrade"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:title="Info Produtos"></androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="A MF service, fundada em novembro de 2012, é uma empresa que procura a satisfação dos seus clientes aliando a oferta de produtos que são novidades no mercado nacional e internacional a um atendimento especializado e personalizado."
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgTrabalhosFeitos"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="8dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/colorAccent"
                        android:src="@drawable/equipamentos_info"
                        app:layout_constraintBottom_toTopOf="@+id/btnAlterarFoto"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/include"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_weight="1"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="EQUIPAMENTOS"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"
                        android:textSize="18sp"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageView13"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="8dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/colorAccent"
                        android:src="@drawable/acessorios_info"
                        app:layout_constraintBottom_toTopOf="@+id/btnAlterarFoto"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/include"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_weight="1"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ACESSÓRIOS"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"
                        android:textSize="18sp"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageView18"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="8dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/colorAccent"
                        android:src="@drawable/revestimento_info"
                        app:layout_constraintBottom_toTopOf="@+id/btnAlterarFoto"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/include"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_weight="1"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:text="REVESTIMENTOS"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageView15"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="8dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/colorAccent"
                        android:src="@drawable/cardio_info"
                        app:layout_constraintBottom_toTopOf="@+id/btnAlterarFoto"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/include"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_weight="1"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CÁRDIO"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"
                        android:textSize="18sp"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageView14"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="8dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/colorAccent"
                        android:src="@drawable/pisos_info"
                        app:layout_constraintBottom_toTopOf="@+id/btnAlterarFoto"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/include"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_weight="1"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="PISOS"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"
                        android:textSize="18sp"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageView25"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="8dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/colorAccent"
                        android:src="@drawable/brinquedos_info"
                        app:layout_constraintBottom_toTopOf="@+id/btnAlterarFoto"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/include"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_weight="1"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:text="BRINQUEDOS"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>